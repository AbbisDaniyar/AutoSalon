<div class="welcome-section">
    <h2>Корзина бронирования</h2>

    {{#if cartCars.length}}
    <table class="table">
        <thead>
            <tr>
                <th>Бренд</th>
                <th>Модель</th>
                <th>Цвет</th>
                <th>Двигатель</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            {{#each cartCars}}
            <tr>
                <td>{{this.brand_name}}</td>
                <td>{{this.model_name}}</td>
                <td>{{this.color}}</td>
                <td>
                    {{#if (eq this.engine 'petrol')}}Бензин{{/if}}
                    {{#if (eq this.engine 'diesel')}}Дизель{{/if}}
                </td>
                <td><strong>{{this.price}} ₽</strong></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div style="background: #e8f4fc; padding: 1.5rem; border-radius: 8px; margin: 1.5rem 0;">
        <h3 style="color: #2c3e50; margin: 0;">Общая стоимость: <strong>{{totalPrice}} ₽</strong></h3>
    </div>

    <div class="welcome-section" style="margin-top: 2rem;">
        <h3>Оформление продажи</h3>
        <form action="/sales/cartToHistory" method="POST">
            <div class="form-group">
                <label>Клиент:</label>
                <select name="client_id_ref" required>
                    <option value="">-- Выберите клиента --</option>
                    {{#each Clients}}
                    <option value="{{this.client_id}}">{{this.full_name}} ({{this.phone}})</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Менеджер:</label>
                <select name="employee_id_ref" required>
                    <option value="">-- Выберите менеджера --</option>
                    {{#each Employees}}
                    <option value="{{this.employee_id}}">{{this.full_name}} - {{this.position}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Способ оплаты:</label>
                <select name="payment_type" required>
                    <option value="cash">Наличные</option>
                    <option value="card">Банковская карта</option>
                    <option value="credit">Кредит</option>
                </select>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit" class="btn btn-success" style="flex: 1;">Оформить продажу</button>
                <a href="/cars" class="btn" style="background: #95a5a6;">К автомобилям</a>
            </div>
        </form>
    </div>
    {{else}}
    <div style="text-align: center; padding: 3rem; color: #666;">
        <h3>Корзина пуста</h3>
        <p>Добавьте автомобили в корзину для оформления продажи</p>
        <a href="/cars" class="btn" style="margin-top: 1rem;">Перейти к автомобилям</a>
    </div>
    {{/if}}
</div>