<div style="max-width: 600px; margin: 0 auto;">
    <div class="welcome-section">
        <h2>Добавление нового автомобиля</h2>
        
        <form action="/cars/add" method="POST">
            <div class="form-group">
                <label>Модель:</label>
                <select name="model_id_ref" required>
                    <option value="">-- Выберите модель --</option>
                    {{#each Models}}
                    <option value="{{this.model_id}}">{{this.brand_name}} {{this.model_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>VIN номер:</label>
                <input type="text" name="vin" required maxlength="17" placeholder="17-значный номер">
            </div>

            <div class="form-group">
                <label>Цвет:</label>
                <input type="text" name="color" required placeholder="Белый, Черный, Серебристый...">
            </div>

            <div class="form-group">
                <label>Двигатель:</label>
                <select name="engine" required>
                    <option value="petrol">Бензин</option>
                    <option value="diesel">Дизель</option>
                    <option value="electric">Электрический</option>
                </select>
            </div>

            <div class="form-group">
                <label>Коробка передач:</label>
                <select name="transmission" required>
                    <option value="manual">Механика</option>
                    <option value="automatic">Автомат</option>
                </select>
            </div>

            <div class="form-group">
                <label>Цена (руб):</label>
                <input type="number" name="price" step="1000" min="0" required placeholder="2500000">
            </div>

            <div class="form-group">
                <label>Статус:</label>
                <select name="status" required>
                    <option value="available">В наличии</option>
                    <option value="reserved">Забронирован</option>
                </select>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit" class="btn" style="flex: 1;">Добавить автомобиль</button>
                <a href="/cars" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>