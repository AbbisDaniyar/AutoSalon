<div class="welcome-section">
    <h2>История покупок</h2>

    {{#if History.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Автомобиль</th>
                    <th>Клиент</th>
                    <th>Менеджер</th>
                    <th>Дата</th>
                    <th>Цена</th>
                    <th>Оплата</th>
                </tr>
            </thead>
            <tbody>
                {{#each History}}
                <tr>
                    <td><strong>{{this.sale_id}}</strong></td>
                    <td>
                        <strong>{{this.brand_name}} {{this.model_name}}</strong><br>
                        <small style="color: #7f8c8d;">{{this.color}}, {{this.vin}}</small>
                    </td>
                    <td>{{this.client_name}}</td>
                    <td>{{this.employee_name}}</td>
                    <td>{{this.sale_date}}</td>
                    <td class="price">{{this.sale_price}} ₽</td>
                    <td>
                        {{#if (eq this.payment_type 'cash')}}Наличные{{/if}}
                        {{#if (eq this.payment_type 'card')}}Карта{{/if}}
                        {{#if (eq this.payment_type 'credit')}}Кредит{{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="no-data">
        <h3>История покупок пуста</h3>
        <p>У этого клиента пока нет совершенных покупок</p>
    </div>
    {{/if}}

    <div class="mt-2">
        <a href="/clients" class="btn">К клиентам</a>
        <a href="/cars" class="btn btn-secondary">К автомобилям</a>
    </div>
</div>