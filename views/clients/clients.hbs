<div class="actions">
    <a href="/clients/add" class="btn">Добавить клиента</a>
</div>

<div class="table-responsive">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each Clients}}
            <tr>
                <td><strong>{{this.client_id}}</strong></td>
                <td><strong>{{this.full_name}}</strong></td>
                <td>{{this.phone}}</td>
                <td>{{this.email}}</td>
                <td>
                    <div class="table-actions">
                        <a href="/clients/edit/{{this.client_id}}" class="btn">Ред.</a>
                        <a href="/sales/getHistory/{{this.client_id}}" class="btn btn-success">История</a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{#unless Clients.length}}
<div class="no-data">
    <h3>Клиенты не найдены</h3>
    <p>Добавьте первого клиента</p>
</div>
{{/unless}}