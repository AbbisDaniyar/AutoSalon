<div style="max-width: 600px; margin: 0 auto;">
    <div class="welcome-section">
        <h2>Редактирование автомобиля</h2>
        
        <form action="/cars/edit" method="POST">
            <input type="hidden" name="car_id" value="{{car.car_id}}">
            
            <div class="form-group">
                <label>Модель:</label>
                <select name="model_id_ref" required>
                    {{#each Models}}
                    <option value="{{this.model_id}}" {{#if (eq this.model_id ../car.model_id_ref)}}selected{{/if}}>
                        {{this.brand_name}} {{this.model_name}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>VIN номер:</label>
                <input type="text" name="vin" value="{{car.vin}}" required maxlength="17" readonly>
            </div>

            <div class="form-group">
                <label>Цвет:</label>
                <input type="text" name="color" value="{{car.color}}" required>
            </div>

            <div class="form-group">
                <label>Двигатель:</label>
                <select name="engine" required>
                    <option value="petrol" {{#if (eq car.engine 'petrol')}}selected{{/if}}>Бензин</option>
                    <option value="diesel" {{#if (eq car.engine 'diesel')}}selected{{/if}}>Дизель</option>
                    <option value="electric" {{#if (eq car.engine 'electric')}}selected{{/if}}>Электрический</option>
                </select>
            </div>

            <div class="form-group">
                <label>Коробка передач:</label>
                <select name="transmission" required>
                    <option value="manual" {{#if (eq car.transmission 'manual')}}selected{{/if}}>Механика</option>
                    <option value="automatic" {{#if (eq car.transmission 'automatic')}}selected{{/if}}>Автомат</option>
                </select>
            </div>

            <div class="form-group">
                <label>Цена (руб):</label>
                <input type="number" name="price" value="{{car.price}}" step="1000" min="0" required>
            </div>

            <div class="form-group">
                <label>Статус:</label>
                <select name="status" required>
                    <option value="available" {{#if (eq car.status 'available')}}selected{{/if}}>В наличии</option>
                    <option value="reserved" {{#if (eq car.status 'reserved')}}selected{{/if}}>Забронирован</option>
                    <option value="sold" {{#if (eq car.status 'sold')}}selected{{/if}}>Продан</option>
                </select>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit" class="btn" style="flex: 1;">Сохранить изменения</button>
                <a href="/cars" class="btn" style="background: #95a5a6;">Отмена</a>
            </div>
        </form>
    </div>
</div>